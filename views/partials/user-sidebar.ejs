<% const navLinkClass="flex items-center py-3 px-2 text-[#03045e] rounded-lg hover:bg-[#00b4d8] group" %>


<button data-drawer-target="sidebar-multi-level-sidebar" data-drawer-toggle="sidebar-multi-level-sidebar" aria-controls="sidebar-multi-level-sidebar" type="button" class="inline-flex items-center p-2 text-sm text-[#03045e] sm:hidden  " onclick="toggleSidebar(this)">
  <span class="sr-only">Open sidebar</span>
  <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
    <path clip-rule="evenodd" fill-rule="evenodd" d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z"></path>
  </svg>
</button>

<aside id="sidebar-multi-level-sidebar" class="fixed top-10 sm:top-0 left-0 z-40 w-64 h-screen transition-transform -translate-x-full sm:translate-x-0" aria-label="Sidebar">
  <div class="h-full px-3 py-4 overflow-y-auto bg-[#caf0f8]">    
    <ul class="space-y-2 font-medium text-xl border-b border-[#03045e] pb-2">
      <li>
        <a href="/home" class="<%= navLinkClass %>">
          <i class="fa fa-home"></i>
          <span class="ml-3">Dashboard</span>
        </a>
      </li>
      <li>
        <a href="/calculate" class="<%= navLinkClass %>">
          <i class="fa-solid fa-calculator"></i>
          <span class="ml-3">Calculate Tax</span>
        </a>
      </li>
      <li>
        <a href="/report" class="<%= navLinkClass %>">
          <i class="fa-solid fa-file-contract"></i>
          <span class="ml-3">Tax Report</span>
        </a>
      </li>
      <li>
        <a href="/profile" class="<%= navLinkClass %>">
          <i class="fa-solid fa-user"></i>
          <span class="ml-3">Profile</span>
        </a>
      </li>
    </ul>
    <ul class="space-y-2 font-medium text-xl">
      <li>
        <div class="<%= navLinkClass %> my-3">
          <i class="fa-solid fa-arrow-right-from-bracket"></i>
          <span class="ml-3">Logout</span>
        </div>
      </li>
    </ul>
  </div>
</aside>
<script>
  function toggleSidebar(x) {
    x.classList.toggle('bg-[#caf0f8]')
    x.classList.toggle('w-64')
    const menu = document.querySelector(
      "#sidebar-multi-level-sidebar"
    );
    menu.classList.toggle("-translate-x-full");
  }
</script>