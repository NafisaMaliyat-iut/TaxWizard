<% const navLinkClass = "py-4 lg:py-0 relative text-lg w-fit block after:block after:content-[''] text-[#300722] after:absolute after:h-[3px] after:bg-[#7366FF] after:w-full after:scale-x-0 after:hover:scale-x-100 after:transition after:duration-500 after:origin-center hover:text-[#7366FF] hover:"; %>

<% const primaryButtonClass = "relative py-1.5 font-medium text-xl rounded-xl ease-in lg:px-10 md:px-6 px-6 text-white bg-[#7366FF] hover:bg-gradient-to-r hover:from-cyan-500 hover:to-blue-500 hover:duration-500 hover:ease-in hover:scale-110" %>


<% const secondaryButtonClass = "relative py-1 font-medium text-xl rounded-xl ease-in lg:px-6 md:px-4 px-4 text-[#7366FF] hover:bg-gradient-to-r hover:from-cyan-500 hover:to-blue-500 hover:duration-500 hover:ease-in hover:scale-110" %>

<nav class="bg-white fixed w-full z-20 top-0 left-0 border-b border-gray-200">
  <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
    <a href="https://flowbite.com/" class="flex items-center">
      <img src="https://flowbite.com/docs/images/logo.svg" class="h-8 mr-3" alt="Flowbite Logo">
      <span class="self-center text-2xl font-semibold whitespace-nowrap ">Flowbite</span>
    </a>
    <div class="flex md:order-2">
      <div class="flex flex-col justify-start">
        <div class="z-10">
          <button type="button" class="<%= secondaryButtonClass %>">
            Register
          </button>
        </div>
      </div>
      <div class="flex flex-col justify-end">
        <div class="z-10">
          <button type="button" class="<%= primaryButtonClass %>">
            Login
          </button>
        </div>
      </div>
      <button data-collapse-toggle="navbar-sticky" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none" aria-controls="navbar-sticky" aria-expanded="false" onclick="toggleMobileNavMenu()">
        <span class="sr-only">Open main menu</span>
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15" />
        </svg>
      </button>
    </div>
    <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-sticky">
      <ul class="flex flex-col p-4 md:p-0 mt-4 font-medium border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 md:mt-0 md:border-0 md:bg-white">
        <li>
          <a href="#" class="<%= navLinkClass %>" aria-current="page">Home</a>
        </li>
        <li>
          <a href="#" class="<%= navLinkClass %>">About</a>
        </li>
        <li>
          <a href="#" class="<%= navLinkClass %>">Services</a>
        </li>
        <li>
          <a href="#" class="<%= navLinkClass %>">Contact</a>
        </li>
      </ul>
    </div>
  </div>
</nav>
<script>
  function toggleMobileNavMenu() {
    const menu = document.querySelector(
      "#navbar-sticky"
    );
    menu.classList.toggle("hidden");
  }
</script>